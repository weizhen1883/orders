	<body ng-app="angularApp">
		<div ng-controller="AddMenuController">
			<form ng-submit="addMenuZone()">
				<fieldset style="width:400px">
					<legend>Add Zone:</legend>
					name:<br>
					<input type="text" name="zone_name" ng-model="addZone.name">
					<br>
					description:<br>
					<textarea cols="50" rows="5" name="zone_description" ng-model="addZone.description"></textarea>
					<br><br>
					<input type="submit" value="Add">
				</fieldset>
			</form>
			<br>
			<form ng-submit="deleteMenuZone()">
				<fieldset style="width:400px">
					<legend>Delete Zone:</legend>
					<label ng-repeat="zone in zones">
						<input type="checkbox" checklist-value="zone.id" checklist-model="deleteZone.id">{{zone.name}}<br>
					</label>
					<br>
					<input type="submit" value="Delete">
				</fieldset>
			</form>
			<br>
			<form ng-submit="addMenuItem()">
				<fieldset style="width:400px">
					<legend>Add Menu Item:</legend>
					name:<br>
					<input type="text" name="name" ng-model="addItem.name">
					<br>
					type:<br>
					<input type="text" name="type" ng-model="addItem.type">
					<br>
					restaurant:<br>
					<input type="text" name="restaurant" ng-model="addItem.restaurant">
					<br>
					cal:<br>
					<input type="text" name="cal" ng-model="addItem.cal">
					<br>
					price:<br>
					<input type="text" name="price" ng-model="addItem.price">
					<br>
					zone:<br>
					<select name="zone" ng-model="addItem.zone">
						<option ng-repeat="zone in zones" value="{{zone.id}}">{{zone.name}}</option>
					</select>
					<br>
					imgURL:<br>
					<input type="text" name="imgURL" ng-model="addItem.imgURL">
					<br><br>
					<input type="submit" value="Add">
				</fieldset>
			</form>
