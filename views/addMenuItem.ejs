	  	<!-- Lastest version of angular.js -->
	  	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular.min.js"></script>
    	<script src="https://ajax.googleapis.com/ajax/libs/angularjs/1.3.15/angular-cookies.js"></script>
	  	<!-- include the angular js files -->
	  	<script src="/javascripts/AngularJS/angularApp.js"></script>
	    <!-- include the angular js controllers js files -->
	    <script src="/javascripts/AngularJS/controllers/AddMenuController.js"></script>
	    <!-- include the angular js directives js files -->
	    <script src="/javascripts/AngularJS/services/AddMenuServices.js"></script>
	    <!-- include the angular js services js files -->
	    <!-- include other js files -->
	</body>
</html>
